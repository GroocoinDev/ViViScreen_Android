<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ad_background_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ad_sample1"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_cardview_gradient">

            <TextView
                android:id="@+id/ad_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ad_writer_textview"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                tools:text="설 이벤트"/>

            <TextView
                android:id="@+id/ad_writer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="25dp"
                android:paddingEnd="10dp"
                android:paddingBottom="30dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:text="작성자 이름"/>

            <ImageView
                android:id="@+id/ad_groopoint_imageview"
                android:layout_width="10.5dp"
                android:layout_height="43.5dp"
                android:layout_toRightOf="@id/ad_writer_textview"
                android:layout_alignParentBottom="true"
                android:paddingBottom="33dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_groopoint"/>

            <TextView
                android:id="@+id/ad_groopoint_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/ad_groopoint_imageview"
                android:paddingBottom="30dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:text="500"/>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skip_red_24dp"
            android:layout_margin="25dp"
            android:layout_gravity="right|top"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like_green_24dp"
            android:layout_margin="25dp"
            android:layout_gravity="left|top"/>

    </FrameLayout>
</android.support.v7.widget.CardView>