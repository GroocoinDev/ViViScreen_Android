<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:paddingTop="45dp">

    <ImageView
        android:id="@+id/profile_imageview"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/profile_sample_img"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_imageview"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Stephance, 40"
        android:textSize="20dp"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/introduce_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_textview"
        android:textAlignment="center"
        android:text="ViVi Screen의 Advertisement Director"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:textColor="#c8c8c8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/introduce_textview"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/create_content_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:padding="18dp"
                android:background="@drawable/background_setting_while_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:text="컨텐츠 제작"/>
                
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="42.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/profile_icon1" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_channel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="7dp"
                android:padding="18dp"
                android:background="@drawable/background_setting_while_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:text="나의 채널"/>

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="42.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/profile_icon2" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:padding="18dp"
                android:background="@drawable/background_groopoint_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fbc391"
                    android:textSize="16sp"
                    android:text="MY 그루포인트"/>

                <ImageView
                    android:layout_width="10.5dp"
                    android:layout_height="10.5dp"
                    android:layout_toLeftOf="@+id/profile_my_groopoint_textview"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_groopoint"/>

                <TextView
                    android:id="@+id/profile_my_groopoint_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:text="105,000"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:padding="18dp"
                android:background="@drawable/background_groocoin_round">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#eea1d7"
                    android:textSize="16sp"
                    android:text="MY 그루코인"/>

                <ImageView
                    android:layout_width="10.5dp"
                    android:layout_height="10.5dp"
                    android:layout_toLeftOf="@+id/profile_my_groocoin_textview"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_groocoin"/>
                
                <TextView
                    android:id="@+id/profile_my_groocoin_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:text="5,000"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
